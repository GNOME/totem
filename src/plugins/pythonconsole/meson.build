plugin_name = 'pythonconsole'

plugin_dir = join_paths(totem_pluginsdir, plugin_name)

plugin_files = files(
  plugin_name + '.py',
  'console.py'
)

install_data(
  plugin_files,
  install_dir: plugin_dir
)

plugin_data = plugin_name + '.plugin'

custom_target(
  plugin_data,
  input: plugin_data + '.in',
  output: plugin_data,
  command: intltool_desktop_cmd,
  install: true,
  install_dir: plugin_dir
)

schema = 'org.gnome.totem.plugins.' + plugin_name + '.gschema.xml'

configure_file(
  input: schema + '.in',
  output: schema,
  install: true,
  install_dir: totem_schemadir,
  configuration: plugins_conf
)

install_data(
  plugin_name + '.convert',
  install_dir: join_paths(totem_datadir, 'GConf', 'gsettings')
)

test('pylint-' + plugin_name, pylint, args: pylint_flags + [ plugin_name + '.py', 'console.py' ])
